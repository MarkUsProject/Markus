default: &default
  adapter: postgresql
  encoding: unicode
  host: <%= ENV['PGHOST'] %>
  username: <%= ENV['PGUSER'] %>
  password: <%= ENV.fetch('PGPASSWORD') { Rails.application.secrets.pg_password }  %>
  pool: 5
  database: <%= ENV['PGDATABASE'] %>
  port: <%= ENV['PGPORT'] %>

development:
  <<: *default

test:
  <<: *default
  database: <%= ENV.fetch('PGDATABASETEST') { ENV.fetch('PGDATABASE', '') + '-test' } %>

production:
  <<: *default
