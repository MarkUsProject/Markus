<% params[:_method] = 'patch' %>
<% cat_id = @annotation.annotation_text.annotation_category_id %>
$('#annotation_dialog').empty();
document.getElementById('annotation_dialog').innerHTML = '<%= escape_javascript(
  render partial: "annotation_modal",
         locals: { form_url: annotation_path(id: @annotation.id),
                   form_values: params,
                   assignment: @assignment,
                   result: @annotation.result,
                   annotation: @annotation,
                   title: t('helpers.submit.update', model: Annotation.model_name.human),
                   content: @annotation.annotation_text.content,
                   submit_btn_data: cat_id.nil? ? {} : { confirm: t('results.annotation.change_across_submissions') }
                 }
)%>';
open_annotation_modal();
