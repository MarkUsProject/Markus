<h3>
  <%= User.human_attribute_name(:api_key) %>
  <span class='help api_key_help'>
    <p class='help-message-box api_key_help' style="display:none;">
      <%= t('users.api_key.help_html') %>
    </p>
  </span>
</h3>

<div id='api_key_box'>
  <% if !user.api_key.nil? %>
    <%= form_tag reset_api_key_main_index_path,
                 remote: true do %>
      <%= submit_tag t('users.api_key.reset') %>
    <% end %>

    <div id='api_key'><%= user.api_key %></div>
  <% else %>
    <%= t('users.api_key.unavailable') %>
  <% end %>
</div>
