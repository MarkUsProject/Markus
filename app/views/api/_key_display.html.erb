<h3><%= I18n.t(:api_key) %></h3>
<div id='api_key_box'>
  <% if user.api_key %>
    <%= form_tag reset_api_key_main_index_path,
                 remote: true do %>
      <%= submit_tag t(:reset_api_key) %>
    <% end %>

    <div id='api_key'><%= user.api_key %></div>
  <% else %>
    <%= t(:api_key_unavailable) %>
  <% end %>
</div>
