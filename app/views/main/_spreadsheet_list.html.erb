<div class='section'>
  <% if @grade_entry_forms.empty? %>
    <p><%= t('grade_entry_forms.none') %></p>
  <% else %>
    <div class="table">
      <table>
        <thead>
        <tr>
          <th><%= t(:name) %></th>
        </tr>
        </thead>
        <tbody>
        <% @grade_entry_forms.each do |grade_entry_form| -%>
          <tr>
            <td>
              <%= link_to grade_entry_form.short_identifier + ': ' + grade_entry_form.description,
                          view_summary_grade_entry_form_path(grade_entry_form.id),
                          data: { remote: true, id: grade_entry_form.short_identifier },
                          class: (grade_entry_form == @current_assignment ? "link_disabled" : "") %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
