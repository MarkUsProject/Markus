<%= content_for :modal_id, 'auto_match_dialog' %>
<%= content_for :modal_title, '!!Placeholder' %>
<%= content_for :modal_open_link, '#autoMatchModal' %>

<%= content_for :modal_content do %>
  <%= form_tag upload_course_assignment_groups_path(@current_course, @assignment),
               { multipart: true } do %>
    <p>
      <%= label_tag '!!Exam Template' %>
      <%= select_tag(:exam_template, options_for_select(@encodings)) %>
    </p>

    <section class='dialog-actions'>
      <%= submit_tag '!!Auto-match',
                     data: { disable_with: t(:uploading_please_wait) },
                     disabled: true,
                     id: 'upload' %>
      <input type='reset' value='<%= t(:cancel) %>'/>
    </section>
  <% end %>
<% end %>
