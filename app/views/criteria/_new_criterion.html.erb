<li id='new_criterion' class='new'>
  <%= form_tag assignment_criteria_path(assignment_id: assignment.id),
               method: :post,
               remote: true do %>
    <div class='inline-labels'>
      <%= label_tag :new_criterion_prompt, Criterion.human_attribute_name(:name) %>
      <%= text_field_tag :new_criterion_prompt, '' %>
      <%= label_tag :max_mark_prompt, Criterion.human_attribute_name(:max_mark) %>
      <%= number_field_tag(:max_mark_prompt,
                           RubricCriterion::DEFAULT_MAX_MARK,
                           size: 4,
                           step: 0.1) %>
    </div>
    <p>
      <%= radio_button_tag(:criterion_type,
                           'RubricCriterion',
                           checked = true) %>
      <%= image_tag('icons/table.png', title: t('criteria.rubric'))%>
      <%= label_tag('criterion_type_RubricCriterion',
                    t('criteria.rubric')) %>
      <%= radio_button_tag(:criterion_type,
                           'FlexibleCriterion',
                           checked = false) %>
      <span class="flexible-criteria-icon" title=<%= t('criteria.flexible') %>> â…” </span>
      <%= label_tag('criterion_type_FlexibleCriterion',
                    t('criteria.flexible')) %>
      <%= radio_button_tag(:criterion_type,
                           'CheckboxCriterion',
                           checked = false) %>
      <%= image_tag('icons/check_box.png', title: t('criteria.checkbox'))%>
      <%= label_tag('criterion_type_CheckboxCriterion',
                    t('criteria.checkbox')) %>
    </p>
    <p><%= submit_tag(t(:save), data: { disable_with: t('working') }) %></p>
  <% end %>
</li>

