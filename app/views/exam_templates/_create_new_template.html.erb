<%= content_for :modal_id, 'create_new_template' %>
<%= content_for :modal_title, t('exam_templates.create.add_new') %>
<%= content_for :modal_content do %>
  <%= form_for :create_template,
               url: assignment_exam_templates_path(@assignment),
               html: { multipart: true, size: 1 } do |f| %>
    <div>
      <p class="alignleft"><%= f.label ExamTemplate.human_attribute_name('name') + ' (' + t(:optional) + ')' %></p>
      <p class="clear-alignment">
        <%= f.text_field :name %>
      </p>
      <p class="alignleft"><%= t('exam_templates.create.upload') %> <span class='required_field'>*</span></p>
      <p class="clear-alignment">
        <%= f.file_field :file_io %>
      </p>
    </div>
    <section class='dialog-actions'>
      <%= f.submit t(:save),
                   name: 'submit',
                   data: { disable_with: t('working') },
                   class: 'button' %>
      <input type='reset' value='<%= t(:cancel) %>' onclick='modal_create_new.close();'/>
    </section>
  <% end %>
<% end %>
