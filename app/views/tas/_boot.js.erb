<script type="text/javascript">
//<![CDATA[

document.observe("dom:loaded", function() {

  users_table = new FilterTable({
    table_id: $('tas'),
    headers: {
      user_name: {display: "<%= I18n.t('user.user_name') %>", sortable: true},
      last_name: {display: "<%= I18n.t('user.last_name') %>", sortable: true},
      first_name: {display: "<%= I18n.t('user.first_name') %>", sortable: true},
      edit: {display: "", sortable: false}
    },
    can_select: false,
    can_select_all: false,
    can_sort: true,
    row_prefix: "tas_row_",
    select_name: "ta_ids[]",
    select_id_prefix: "tas_select_",
    default_sort: 'user_name',
    footer: true,
  });

  new Ajax.Request('<%= populate_tas_path() %>',
                   {asynchronous:true, evalScripts:true,
                   onComplete:function(request){$('loading_list').hide();},
                   parameters: 'authenticity_token=' + AUTH_TOKEN})
});

//]]>
</script>
