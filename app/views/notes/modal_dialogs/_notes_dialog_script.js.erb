$('#notes_dialog').html('<%= escape_javascript(
       render partial: 'notes/modal_dialogs/notes_dialog').html_safe %>');

modalNotesGroup.open();
$('#new_notes').select();

if ($('#notes_dialog .inline-button.delete').length) {
  $('#notes_dialog .inline-button.delete').parent().on('ajax:success', function() {
    modalNotesGroup.close();
    if (window.resultComponent !== undefined) {
      window.resultComponent.fetchData();
    }
  });
}
$(function () {
  $('#notes_submit').click(function() {
    modalNotesGroup.close()
  })
  $('#notes-cancel').click(function() {
    modalNotesGroup.close()
  })
})
