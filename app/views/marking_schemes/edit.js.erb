// Remove HTML from add div and hide it
$('.new-ms').html('');
$('.new-ms').hide();

// Remove HTML from edit div incase another marking
// scheme is being edited
$('.edit-ms').html('');

$('.edit-ms').append(`<h2>${I18n.t('marking_schemes.edit')}</h2>`);
$('.edit-ms').append("<%= j (render 'form') %>");

// Show edit div if hidden
$('.edit-ms').show();

// Scroll to div
$('html, body').animate({
  scrollTop: $('.edit-ms').offset().top
}, 1000);

