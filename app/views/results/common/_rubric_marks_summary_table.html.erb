<table id="summary_criteria_pane_list" class="marks_summary_pane_list">
<thead>
  <th><%=t("summary_table.title")%></th>
  <th><%=t("summary_table.weight")%></th>
  <th><%=t("summary_table.x_mark")%></th>
  <th>=&nbsp;<%=t("summary_table.grade")%></th>
</thead>
<% @mark_criteria.each do |criterion| -%>
<%
   mark = marks_map[criterion.id]
   if mark.nil? or mark.mark.nil?
     mark_value = 0
   else
     mark_value = mark.mark
   end

%>

<tr class="<%= cycle('mark_summary_holderA', 'mark_summary_holderB') %>" id="<%= "mark_#{mark.id}_summary" %>">
    <td><%= h(criterion.rubric_criterion_name) %></td>
    <td><%= h(criterion.weight) %></td>
    <td><span id="mark_<%= h(mark.id)%>_summary_mark"><%= h(mark_value) %></span></td>
    <td><span id="mark_<%= h(mark.id)%>_summary_mark_after_weight"><%= h((mark_value * criterion.weight)) %></span> / <%=  h(criterion.weight * 4) %></td>

</tr>

<% end -%>

<% if @assignment.has_test_scripts?%>

<tr class="<%= cycle('mark_summary_holderA', 'mark_summary_holderB') %>" id="<%= "test_script_summary" %>">
    <td><%=t("summary_table.test_script_title")%></td>
    <td>1.0</td>
    <td><span id="test_Script_summary_mark"><%= h(@submission.result.get_total_test_script_marks * 1.0) %></span></td>
    <td><span id="test_script_summary_mark_after_weight"><%= h(@submission.result.get_total_test_script_marks * 1.0) %></span> / <%=  h(@assignment.total_test_script_marks * 1.0) %></td>

</tr>

<% end -%>

</table>  <!-- Summary Criteria Pane List -->

