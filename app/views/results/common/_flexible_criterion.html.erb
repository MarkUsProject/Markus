<div id="<%= 'mark_criterion_title_#{mark_criterion.id}_name' %>"
     class='mark_criterion_title_div_level float_left'>
  <strong><%= (mark_criterion.flexible_criterion_name) %></strong>
</div>

<div class='clear'></div>

<div id="<%= 'mark_criterion_title_#{mark.id}_mark' %>"
     class='padding_left mark_description'
     data-id='<%= mark_criterion.id %>'>
  <% if !mark.mark.nil? -%>
    <strong><%= mark.mark %>&nbsp;/ <%= mark_criterion.max %></strong>
    <p><%= mark_criterion.description %></p>
  <% end -%>
</div>

<div class='clear'></div>
