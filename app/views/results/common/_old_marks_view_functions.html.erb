<script>
  jQuery(document).ready(function() {
    if (document.getElementById('summary_toggle')) {
      document.getElementById('summary_toggle').onclick = toggleSummaryPanes;

      function toggleSummaryPanes() {
        var old_visible =
          document.getElementById('old_summary_criteria_pane').style.display !== 'none';

        document.getElementById('old_summary_criteria_pane').style.display =
          old_visible ? 'none' : 'block';
        document.getElementById('summary_criteria_pane').style.display =
          old_visible ? 'block' : 'none';
      }

      toggleSummaryPanes();
    }
  });
</script>
