<script type="text/javascript">
//<![CDATA[
jQuery(document).ready(function() {
  //After DOM is loaded, load up the first submitted file
  <% if !first_file.nil? %>
   load_submitted_file('<%=first_file.id%>');
  <% end %>
  //Register drop down menus...
  <% if !@result.released_to_students %>
  setup_annotation_categories();
  <% end %>

  //Set up the divider
  init_content_width = jQuery('#content').width();
  init_code_pane_width = jQuery('#code_pane').width();
  //Create the modal dialog
  modal = new Control.Modal(jQuery('#create_annotation_dialog'), {fade:false});
  setup_divider(jQuery('#code_pane'), jQuery('#pane_divider'));
});

JQuery(window).load(function() {
<% @mark_criteria.each do |criterion| %>
  <% if criterion.has_associated_ta?(@current_user) %>
    JQuery('mark_criterion_' + <%= criterion.id %>).addClass('assigned');
  <% elsif @current_user.type == "Ta" %>
    hide_criterion(<%= criterion.id %>);
  <% end %>
<% end %>
});
//]]>
</script>
