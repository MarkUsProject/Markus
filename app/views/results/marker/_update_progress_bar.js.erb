<script>
  function update_bar(score, outof) {
    var width = outof <= 0 ? 100 : (score/outof) * 100;
    var $bar = $('.progress_span');
    $('.progress_text').text(score + '/' + outof + ' <%= t('complete') %>');
    $bar.css('width', width + '%');
    if (width > 75) {
        $bar.css('background-color', '#81D881')
    } else if (width > 35) {
        $bar.css('background-color', '#FAFDAA')
    }
  }
</script>
