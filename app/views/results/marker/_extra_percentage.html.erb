<%#
# Erb template for inserting a new extra mark into an assignment grade
%>

<tr id="<%= "extra_mark_#{extra_percentage.id}" %>">
  <td>
    <%=extra_percentage.description%>
  </td>
  <td>
    <%=extra_percentage.extra_mark %>%
  </td>
  <td>
    <%= button_to t(:remove),
        remove_extra_mark_assignment_submission_result_path(id: extra_percentage.id),
        class: 'table-button', confirm: t('results.delete_extra_mark_confirm'),
        remote: true %>
  </td>
</tr>
