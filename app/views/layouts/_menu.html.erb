<ul class='main'>
  <li id='logo'>
    <%= render partial: 'layouts/breadcrumb'%>
  </li>

  <% if @current_user.admin? %>
    <li <% if controller.controller_name == 'main' %>
          class='active'
        <%end%>>
      <%= link_to I18n.t(:dashboard), controller: 'main' %>
    </li>

    <li <% if controller.controller_name == 'assignments' or
              controller.controller_name == 'flexible_criteria' or
              controller.controller_name == 'rubrics' or
              controller.controller_name == 'ta_assignments' or
              controller.controller_name == 'submissions' or
              controller.controller_name == 'groups' or
              controller.controller_name == 'graders' or
              controller.controller_name == 'marks_graders' or
              controller.controller_name == 'results' or
              controller.controller_name == 'annotation_categories' or
              controller.controller_name == 'grade_entry_forms' or
              controller.controller_name == 'automated_tests' %>
          class='active'
        <% end %>>
      <%= link_to I18n.t(:assignments), controller: 'assignments'%>
    </li>

    <li <% if controller.controller_name == 'admins' or
              controller.controller_name == 'students' or
              controller.controller_name == 'tas' %>
          class='active'
        <% end %>>
      <%= link_to I18n.t(:users), controller: 'students' %>
    </li>

    <li <% if controller.controller_name == 'sections' %>
          class='active'
        <% end %>>
      <%= link_to I18n.t(:sections), controller: 'sections' %>
    </li>
  <% else %>
    <li <% if controller.controller_name == 'assignments' or
              controller.controller_name == 'flexible_criteria' or
              controller.controller_name == 'rubrics' or
              controller.controller_name == 'ta_assignments' or
              controller.controller_name == 'submissions' or
              controller.controller_name == 'groups' or
              controller.controller_name == 'results' or
              controller.controller_name == 'grade_entry_forms' %>
          class='active'
        <% end %>>
      <%= link_to I18n.t(:home), controller: 'assignments' %>
   </li>
  <% end %>

  <%if @current_user.admin? || @current_user.ta? %>
    <li <% if controller.controller_name == 'notes' %>
          class='active'
        <%end%>>
      <%= link_to I18n.t('notes.title'), notes_path() %>
    </li>
  <% end %>
</ul>
