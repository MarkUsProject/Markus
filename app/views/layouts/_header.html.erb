<header id='header'>
  <div id='course'>
    <strong><%= Settings.course_name %></strong>
  </div>
  <div id='user-info'>
    <span id='logout_area'>
      <span id='admin_logged_in_as'>
        <% if session[:real_uid] %>
          <strong><%= User.find_by_id(session[:real_uid]).first_name %></strong>
        <% end %>
      </span>
      <span id='user-id'>
        <%= @current_role.display_name %>
        ( <strong><%= @current_role.user_name %></strong> )
      </span>
      <% if allowed_to?(:role_switch?) %>
        <%= link_to t('main.role_switch.switch_role'),
                    role_switch_course_path(@current_course.id),
                    remote: true,
                    class: 'button inline-button switch-role' %>
      <% end %>

      <%= link_to(t('main.log_out'),
                  logout_main_index_path,
                  id: 'logout_link',
                  method: :post,
                  class: 'button inline-button') unless
            Settings.logout_redirect == 'NONE' %>

      <% if allowed_to?(:clear_role_switch_session?) %>
        <%= link_to t('main.role_switch.clear_role_switch_session'),
                    controller: 'courses',
                    action: 'clear_role_switch_session' %>
      <% end %>
    </span>
  </div>

  <div id='working' class="no-display">
    <span><%= t(:working) %></span>
    <span id='ellipsis'></span>
  </div>
</header>

<%= javascript_tag nonce: true do %>
<%= render partial: 'shared/poll_job', formats: [:js], handlers: [:erb] %>
set_theme('<%= @current_user.theme %>');
<% end %>
