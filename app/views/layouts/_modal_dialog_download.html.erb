<%= stylesheet_link_tag('clickable') %>
<aside class='dialog' id='download_dialog' >
  <h2>
    <%= yield(:modal_title) %>
  </h2>
  <br/>
  <% items.each do |item|%>
      <div class="clickable_links">
        <div class="clickable_text">
          <img style="width: 15px; height: 15px; margin-right: 15px;" src="<%= image_url("icons/download-file.png") %>">
          <%= t(class_name+'.download.download_'+item) %>
        </div>
        <%= link_to '',
                    { action: 'download',
                      id: @assignment.id,
                      format: item },
                    onclick: 'modal_download.close();',
                    class: 'make_div_clickable' %>
      </div>
  <% end %>
  <section class='dialog-actions'>
    <input type='reset' id="download" value='<%= t(:cancel) %>' onclick='modal_download.close();' />
  </section>
</aside>
<%# Flush content from variables. Allows reuse of partials %>
<% content_for :modal_title, '', flush: true %>
<% content_for :modal_content, '', flush: true %>