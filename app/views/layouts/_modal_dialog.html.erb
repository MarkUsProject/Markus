<aside class='dialog' id=<%= yield_content! :modal_id %>
       data-open-link='<%= yield_content! :modal_open_link %>'
       style="display:none">
  <% if content_for? :modal_title %>
    <h2>
      <%= yield_content! :modal_title %>
    </h2>
  <% end %>
  <%= yield_content! :modal_content %>
</aside>
