<aside class='dialog' id='<%= modal_id %>' >
  <h2>
    <%= image_tag('favicon.ico',
                  height: '32',
                  width: '32',
                  alt: "MarkUs",
                  title: "MarkUs Modal") %>
    <%= yield(:modal_title) %>
  </h2>
  <%= yield(:modal_content) %>

  <section class='dialog-actions'>
    <%= yield(:modal_actions) %>
  </section>
</aside>
<%# Flush content from variables. Allows reuse of partials %>
<% content_for :modal_title, '', flush: true %>
<% content_for :modal_content, '', flush: true %>
<% content_for :modal_actions, '', flush: true %>