<aside class='dialog' id=<%= content_for :modal_id %> >
  <h2>
    <%= yield_content! :modal_title %>
  </h2>
  <br/>
  <%= raw yield_content! :modal_content %>
</aside>
<%# Flush content from variables. Allows reuse of partials %>
<% content_for :modal_id, '', flush: true %>
<% content_for :modal_title, '', flush: true %>
<% content_for :modal_content, '', flush: true %>
