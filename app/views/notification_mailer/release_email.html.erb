<div class="emailbkgd dark-scheme">
  <div class="top_section dark-scheme">
    <%= image_tag('markus_logo_big.png', class: 'logo_header')%>
  </div>
  <hr class="divider">
  <p class="to_text dark-scheme">
    <%= t('.greeting', first_name: @user.first_name, last_name: @user.last_name) %>
  </p>
  <p class="body_text dark-scheme">
    <%= t('.text_body', assignment: @grouping.assignment.short_identifier) %>
  </p>
  <div class="button_enclosure">
    <%= link_to t('.button_text'),
                view_marks_assignment_submission_result_url(assignment_id: @grouping.assignment.id,
                                                            submission_id: @grouping.current_submission_used.id,
                                                            id: @grouping.current_result.id),
                class: 'redirectbutton' %>
  </div>
  <p class="alert_text dark-scheme">
    <%= t('.explicit_link',
          link: view_marks_assignment_submission_result_url(assignment_id: @grouping.assignment.id,
                                                            submission_id: @grouping.current_submission_used.id,
                                                            id: @grouping.current_result.id)) %>
  </p>
  <p class="alert_text dark-scheme">
    <%= t('.disclaimer') %>
    <%= link_to t('.settings_link'), mailer_settings_students_url %>
  </p>
</div>
