<% content_for :head do %>
    <%= render partial: 'boot',
               formats: [:js],
               handlers: [:erb] %>
    <%= render partial: 'tags_table',
               formats: [:'js.jsx'],
               handlers: [:erb] %>
<% end %>

<!--The title bar for the page-->
<div class='title_bar'>
  <h1>
    <%= t('tags.title',
          assignment_short_identifier: @assignment.short_identifier) %>
  </h1>

  <!--The buttons for creating tags, uploading and downloading-->
  <div class='heading_buttons'>
    <%= link_to_function t('tags.create_new'), 'modal_create_new.open()' %>
    <span class='menu_bar'></span>
    <%= link_to_function t('tags.download.download_csv'), 'modal_download.open()' %>
    <span class='menu_bar'></span>
    <%= link_to_function  t('tags.upload.upload_csv'), 'modal_upload_csv.open()' %>
  </div>
</div>

<div class="wrapLeft">
    <!--The table that contains all the tags.-->
    <div id='tags_table'></div>
  </div>
</div>

<!--Modal dialogs for creating, uploading and downloading tags-->
<aside class='dialog' id='create_new_dialog'>
  <h1><%= t('tags.create_new') %></h1>
  <p><%= t('rubric_criteria.upload.yml_prompt') %></p>
  <%= form_for :create_new,
               url: assignment_tags_path(@assignment),
               html: { multipart: true, size: 1 } do |f| %>
      <div>
        <p><%= f.text_field :name %></p>
        <%= t('rubric_criteria.upload.format_yml_html') %>
      </div>
      <div>
        <%= t('encoding') %>
        <%= select_tag(:encoding, options_for_select(@encodings)) %>
      </div>

      <section class='dialog-actions'>
        <%= f.submit t(:create) %>
        <input type='reset'
               value='<%= t(:cancel) %>'
               onclick='modal_create_new.close();'>
      </section>
  <% end %>
</aside>
<aside class='dialog' id='upload_csv_dialog'>
  <h1><%= t('tags.upload.upload_csv_title') %></h1>
  <p><%= t('tags.upload.upload_csv_prompt') %></p>
  <%= form_for :upload_csv,
               url: assignment_tags_path(@assignment),
               html: { multipart: true, size: 1 } do |f| %>
    <div class='content'>
      <p><%= f.file_field :tags %></p>
      <%= t('tags.upload.upload_csv_html') %>
      <%= t('csv_special_characters_html') %>
    </div>
    <div class='encoding_type'>
      <%= t('encoding') %>
      <%= select_tag(:encoding, options_for_select(@encodings)) %>
    </div>

    <section class='dialog-actions'>
      <%= f.submit t(:upload),
                   data: { disable_with: t(:uploading_please_wait) } %>
      <input type='reset'
             value='<%= t(:cancel) %>'
             onclick='modal_upload_csv.close();'>
    </section>
   <% end %>
</aside>
<aside class='dialog' id='download_dialog'>
  <h1><%= t('tags.download_csv_title') %></h1>
  <p><!--TODO: ADD DESCRIPTION--></p>
  <ul>
    <li>
      <%= link_to t('rubric_criteria.download.link_csv'),
                  download_csv_assignment_rubrics_path(@assignment),
                  onclick: 'modal_download.close();' %>
    </li>
    <li>
      <%= link_to t('rubric_criteria.download.link_yml'),
                  download_yml_assignment_rubrics_path(@assignment),
                  onclick: 'modal_download.close();' %>
    </li>
  </ul>
</aside>