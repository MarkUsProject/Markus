<%= fields_for :user, @user do |f| %>
  <% selected ||= @user.has_section? ? @user.section.id : [''] %>
  <%= f.select :section_id,
               options_for_select([''] + @sections.map {|s| [s.name, s.id] },
                                  selected: selected) %>
<% end %>
<%= link_to t('sections.new.title'),
            add_new_section_students_path,
            remote: true,
            class: 'button inline-button' %>
