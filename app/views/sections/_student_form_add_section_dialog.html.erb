<%= form_for(@section, remote: true) do |f| %>
  <div id='add_section_error'> </div>

  <h2><%= t('sections.new.title') %></h2>

  <div>
    <%= f.label :name, Section.human_attribute_name(:name) %>
    <%= f.text_field :name %>
  </div>

  <section class='dialog-actions'>
    <%= hidden_field_tag 'section_modal', 'true' %>
    <%= f.submit t(:save) , data: { disable_with: t('working') } %>
    <%= button_tag t(:cancel), onclick: 'modal_add_section.close()' %>
  </section>
<% end %>
