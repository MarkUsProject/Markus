<p>
  <% if grade_entry_form.due_date %>
    <%= "#{GradeEntryForm.human_attribute_name(:date)}: #{l(grade_entry_form.due_date)}" %>
  <% end %>
</p>

<div class="grid-2-col">
  <span><%= t(:average) %></span>
  <span><%= number_to_percentage(grade_entry_form.results_average || 0, precision: 1) %></span>

  <span><%= t(:median) %></span>
  <span><%= number_to_percentage(grade_entry_form.results_median || 0, precision: 1) %></span>

  <span><%= t(:num_entries) %></span>
  <span><%= "#{grade_entry_form.count_non_nil}/" +
            grade_entry_form.grade_entry_students.joins(:user).where('users.hidden': false).count.to_s %></span>

  <span><%= t(:num_failed) %></span>
  <span><%= "#{grade_entry_form.results_fails}" %></span>

  <span><%= t(:num_zeros) %></span>
  <span><%= "#{grade_entry_form.results_zeros}" %></span>
</div>
