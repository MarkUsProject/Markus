<%# Display a list of the current grade entry forms %>

<div class='section'>
  <h3><%= t(:current_grade_entry_forms_title) %></h3>

  <% if @grade_entry_forms.empty? %>
    <p><%= t(:no_grade_entry_forms_message) %></p>
  <% else %>
    <div class='table'>
      <table>
        <thead>
          <tr>
            <th><%= t(:spreadsheet_item) %></th>
            <th><%= t(:spreadsheet_date) %></th>
          </tr>
        </thead>
        <tbody>
          <% @grade_entry_forms.each do |grade_entry_form| %>
            <tr>
              <td>
                <% if grade_entry_form.is_hidden %>
                    <%= link_to t('assignment.hidden',
                                  assignment_text:
                                          "#{h(grade_entry_form.short_identifier)}: #{h(grade_entry_form.description)}" ),
                                { controller: 'grade_entry_forms',
                                  action: action,
                                  id: grade_entry_form },
                                class: 'assignment_list' %>
                <% else %>
                    <%= link_to grade_entry_form.short_identifier + ': ' + grade_entry_form.description,
                                { controller: 'grade_entry_forms',
                                  action: action,
                                  id: grade_entry_form },
                                class: 'assignment_list' %>
                <% end %>

              </td>
              <td>
		<% if grade_entry_form.date %>
                  <%= l(grade_entry_form.date, format: :short_date) %>
		<% else %>
		  <%= '' %>
		<% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
