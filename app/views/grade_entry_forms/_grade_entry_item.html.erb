<% # Template for adding/removing a grade entry item to/from a grade entry form
   # #{name} - The name of the column
   # #{out_of} - The total number of marks
%>
<fieldset class="grade_entry_item">
<legend><%= t('grade_entry_forms.column') %></legend>
<% form.fields_for :grade_entry_items, grade_entry_item do |f| %>
  <p>   
    <%= f.label :name, t('grade_entry_forms.column_name'), :class => "inline_label" %>
    <%= f.text_field :name %>
    <%= f.label :out_of, t('grade_entry_forms.column_out_of'), :class => "inline_label" %>
    <%= f.text_field :out_of, :size => 5, :maxlength => 3 %>
  
    <% if !f.object.nil? && !f.object.new_record? %>
      <span>
        <b><%= t('grade_entry_forms.remove_column') + " " %></b><%= f.check_box :_destroy %>
      </span>
    <% else %>
      <%= link_to_function I18n.t("delete"), "$(this).up('.grade_entry_item').remove()" %>
    <% end %>
  </p> 
<% end %>
</fieldset>
