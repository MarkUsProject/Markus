<% content_for :title, t('assignment_summary', short_id: @assignment.short_identifier) %>
<%= content_for :head do %>
  <%= javascript_tag nonce: true do %>
    document.addEventListener('DOMContentLoaded', () => {
      makeAssignmentSummary(
        document.getElementById('statistics-react'),
        {
          course_id: <%= @current_course.id %>,
          assessment_id: <%= @assignment.id %>,
          is_instructor: <%= @current_role.instructor? %>,
          lti_deployments: JSON.parse('<%= raw(@lti_deployments.to_json) %>')
        }
      );
    });
  <% end %>
<% end %>

<div id='statistics-react'></div>
