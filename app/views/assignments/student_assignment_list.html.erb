<div class='title_bar'>
  <h1><%= GradeEntryForm.model_name.human.pluralize %></h1>
</div>

<%= render partial: 'grade_entry_forms/list' %>

<div class='title_bar'>
  <h1><%= t('student_course_summary') %></h1>
</div>

<div class='wrapLeft'>
  <div id='course_summaries_table'></div>
</div>
