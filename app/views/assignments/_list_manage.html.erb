<div class="section">
  <% if @assignments.empty? %>
  <p><%= I18n.t(:no_assignments) %></p>
  <% else %>
  
  <h3><%= I18n.t(:current_assignments) %></h3>
    <ul>
    
	<% @assignments.each do |assignment| %>
      <li>
        <%= link_to h(assignment.short_identifier)+": "+h(assignment.description), 
            {:controller => controller, 
            :action => action, 
            :id => assignment},
	    :class => "assignment_list"%>
	<span class="info_due_date"><%= I18n.t(:due) %>
          <span class="info_date">  <%=h I18n.l(assignment.due_date,
  :format => :long_date ) %></span>
          <span id="collected_submissions_<%=assignment.short_identifier %>">
            <% if assignment.submission_rule.can_collect_now? %>
              <%=h(" | #{assignment.groupings.all(:conditions => {:is_collected => true}).size}/#{assignment.groupings.size} Submissions Collected")%>
            <% end %>
          </span>
          <span id="class_average__<%=assignment.short_identifier %>">
            | <%= I18n.t(:class_average, :results_average => h(assignment.results_average)) %>
          </span>
        </span>
      </li>
    <% end %>
    
    </ul>
  <% end %>
</div>

<%= periodically_call_remote(:url => {:controller => 'assignments',
    :action => 'update_collected_submissions'}, :frequency => '4') %>
