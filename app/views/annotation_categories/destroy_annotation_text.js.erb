$('#annotation_text_' + <%= @annotation_text.id %>).remove();
<% if @annotation_text.annotation_category.nil? %>
$('#uncategorized').replaceWith("<%= escape_javascript(render partial: 'uncategorized_annotations').html_safe %>");
<% else %>
$('#annotation_category_' + <%= @annotation_text.annotation_category.id %>).replaceWith(
  "<%= escape_javascript(render partial: 'annotation_category',
                                locals: { annotation_category: @annotation_text.annotation_category }).html_safe %>");
<% end %>
