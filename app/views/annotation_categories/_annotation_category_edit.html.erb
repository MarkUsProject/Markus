<div id='current_annotation_category' class='annotation_category_edit'>

  <div id='annotation_category_controls'>
    <div class='float_right'>
      <%= form_tag assignment_annotation_category_path(@assignment, annotation_category),
                   method: 'delete',
                   id: 'delete_annotation_category',
                   remote: true do |f| %>
        <%= submit_tag t(:delete),
                       data: { confirm: t('annotation_categories.destroy.warning') },
                       class: 'delete'
        %>
      <% end %>
    </div>
    <h2><%= annotation_category.annotation_category_name %></h2>

    <fieldset>
       <%= form_for [@assignment, annotation_category],
                    remote: true do |f| %>
       <span id='annotation_category_inputs'>
         <%= f.label :annotation_category_name,
                     AnnotationCategory.human_attribute_name(:annotation_category_name) %>
         <%= f.text_field :annotation_category_name, rows: '3' %>
       </span>

       <%= f.submit t(:save), data: { disable_with: t('working') } %>
     <% end %>
    </fieldset>
  </div>
</div>
