<script type="text/javascript">
//<![CDATA[
  function before_form_submit()
  {
    $('apply_bulk_action').setValue('<%= I18n.t('students.processing') %>');
    $('apply_bulk_action').disable();
    $('apply_bulk_action2').setValue('<%= I18n.t('students.processing') %>');
    $('apply_bulk_action2').disable();
  }

  function after_form_submit()
  {
    $('apply_bulk_action').setValue('<%= I18n.t('apply') %>');
    $('apply_bulk_action').enable();
    $('apply_bulk_action2').setValue('<%= I18n.t('apply') %>');
    $('apply_bulk_action2').enable();
  }
//]]>
</script>
