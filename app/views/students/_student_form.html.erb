<aside class='dialog' id='add_new_section_dialog'></aside>

<div class='section'>
  <%= form_for @user, as: :user do |f| %>

    <table>
      <tr>
        <td><%= raw(f.label(:user_name, User.human_attribute_name(:user_name))) %>:</td>
        <td><%= raw(f.text_field :user_name) %></td>
      </tr>

      <tr>
        <td><%= raw(f.label(:last_name, User.human_attribute_name(:last_name))) %>:</td>
        <td><%= raw(f.text_field :last_name) %></td>
      </tr>

      <tr>
        <td><%= raw(f.label(:first_name, User.human_attribute_name(:first_name))) %>:</td>
        <td><%= raw(f.text_field :first_name) %></td>
      </tr>

      <tr>
        <td><%= raw(f.label(:email, User.human_attribute_name(:email))) %>:</td>
        <td><%= raw(f.text_field :email) %></td>
      </tr>

      <tr>
        <td><%= raw(f.label(:id_number, User.human_attribute_name(:id_number))) %>:</td>
        <td><%= raw(f.text_field :id_number) %></td>
      </tr>

      <tr>
        <td><%= raw(f.label(:grace_credits, User.human_attribute_name(:grace_credits))) %>:</td>
        <td><%= raw(f.text_field :grace_credits) %></td>
      </tr>

      <tr id='select_sections'>
        <%= render partial: 'sections/select_sections',
                   locals: { user: @user, new_student: true } %>
      </tr>
    </table>

    <%= f.hidden_field :id %>
    <%= f.submit t(:submit),
                 name: 'submit',
                 data: { disable_with: t('working') },
                 class: 'button' %>
    <%= link_to t(:cancel), students_path(), class: 'button' %>

  <% end %>
</div>
