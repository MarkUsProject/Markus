<aside class='dialog' id='add_new_section_dialog'></aside>

<%= form_for @user, as: :user do |f| %>
  <div class='inline-labels'>
    <%= f.label :user_name, User.human_attribute_name(:user_name) %>
    <%= f.text_field :user_name %>

    <%= f.label :last_name, User.human_attribute_name(:last_name) %>
    <%= f.text_field :last_name %>

    <%= f.label :first_name, User.human_attribute_name(:first_name) %>
    <%= f.text_field :first_name %>

    <%= f.label :email, User.human_attribute_name(:email) %>
    <%= f.text_field :email %>

    <%= f.label :id_number, User.human_attribute_name(:id_number) %>
    <%= f.text_field :id_number %>

    <%= f.label :grace_credits, User.human_attribute_name(:grace_credits) %>
    <%= f.text_field :grace_credits %>

    <%= f.label :section_id, Section.model_name.human %>
    <span id='select_sections'>
      <%= render partial: 'sections/select_sections',
                 locals: { user: @user, new_student: true } %>
    </span>
  </div>

  <%= f.hidden_field :id %>

  <p>
    <%= f.submit t(:save),
                 name: 'submit',
                 data: { disable_with: t('working') },
                 class: 'button' %>
    <%= link_to t(:cancel), students_path, class: 'button' %>
  </p>
<% end %>
