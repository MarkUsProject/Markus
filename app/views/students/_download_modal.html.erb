<%= content_for :modal_id, 'download_dialog' %>
<%= content_for :modal_title, t('students.download.download_student_list') %>
<%= content_for :modal_open_link, '#downloadModal' %>
<%= content_for :modal_content do %>

  <div class='clickable_links'>
    <div class='clickable_text'>
      <img class='clickable_image' src='<%= image_url('icons/download-file.png') %>'>
      <%= t('download_csv') %>
    </div>
    <%= link_to '',
                { action: 'download_student_list',
                  id: @students,
                  format: 'csv'},
                class: 'make_div_clickable' %>
  </div>
  <div class='clickable_links'>
    <div class='clickable_text'>
      <img class='clickable_image' src='<%= image_url('icons/download-file.png') %>'>
      <%= t('download_yml') %>
    </div>
    <%= link_to '',
                { action: 'download_student_list',
                  id: @students,
                  format: 'xml'},
                class: 'make_div_clickable' %>
  </div>
  <section class='dialog-actions'>
    <input type='reset' id='download' value='<%= t(:cancel) %>'/>
  </section>
<% end %>
